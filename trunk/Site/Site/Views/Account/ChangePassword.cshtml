@model Vtb24.Site.Models.Account.ChangePasswordModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Смена пароля";
}

@Html.AddScriptBlock(
    @<script>
         require(['Shared/form.submit'], function (module) {
             module({ form: '#changepass-form' });
         });
    </script> 
)

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "changepass-form", autocomplete = "off" }))
{
    <div class="full-content shdw">
        <div class="fc-padding">

            <div class="middle-line white">
                <div class="ml-text"><span class="size28">Введите данные для изменения пароля</span></div>
            </div>
            @Html.ValidationSummary()
            <div class="table form-order">
                <ul class="reset row">
                    <li class="cell">
                        Введите старый пароль
                    </li>
                    <li class="cell">
                        @Html.PasswordFor(m=>m.Password, new { maxlength = 20 })
                    </li>
                </ul>

                <ul class="reset row">
                    <li class="cell">
                        Выберите новый пароль
                    </li>
                    <li class="cell">
                        @Html.PasswordFor(m=>m.NewPassword, new { maxlength = 20 })
                    </li>
                </ul>

                <ul class="reset row">
                    <li class="cell">
                        Подтвердите новый пароль
                    </li>
                    <li class="cell">
                        @Html.PasswordFor(m=>m.ConfirmNewPassword, new { maxlength = 20 })
                    </li>
                </ul>
            </div>
            <div class="button-wrap">
                <button class="btn-blue large" type="submit"><span>Сменить</span></button>
            </div>
        </div>
    </div>
}