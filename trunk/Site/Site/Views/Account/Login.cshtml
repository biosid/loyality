@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Вход в личный кабинет";
    ViewBag.HideRegionSelector = true;
}
@model Vtb24.Site.Models.Account.LoginModel

@Html.AddScriptBlock(
    @<script>
         require(['Shared/form.submit'], function (module) {
             module({ form: '#login-form' });
         });
    </script> 
)

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form", autocomplete = "off" }))
{
    @Html.HiddenFor(m=>m.ReturnUrl)
    <div class="full-content shdw">
        <div class="fc-padding">

            <div class="middle-line white">
                <div class="mr-text"><a href="@Url.Action("register", "Account")">Еще не зарегистрированы?</a></div>
                <div class="ml-text">Вход в личный кабинет</div>
            </div>
            @Html.ValidationSummary()
            <div class="table form-order">
                <ul class="reset row">
                    <li class="cell">
                        Номер мобильного телефона
                    </li>
                    <li class="cell">
                        @Html.TextBoxFor(m=>m.Phone, new { maxlength = 17})
                    </li>
                </ul>

                <ul class="reset row">
                    <li class="cell">
                        Пароль
                    </li>
                    <li class="cell">
                        @Html.PasswordFor(m=>m.Password, new { maxlength = 20 })
                        <p class="pdt10"><a href="@Url.Action("ForgotPassword", "Account")" class="login__forgot-pwd">Забыли пароль?</a></p>
                        
                    </li>
                </ul>
            </div>
            <div class="button-wrap">
                <button class="btn-blue large" type="submit"><span>Вход</span></button>
            </div>
        </div>
    </div>
}
