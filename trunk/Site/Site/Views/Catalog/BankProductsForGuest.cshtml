@model Vtb24.Site.Models.Catalog.GuestBankProductsModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Продукты банка";
    ViewBag.MainMenu = "Catalog";
    ViewBag.EnableHeaderDropdown = false;
}

@section secondary
{
    @Html.Partial("_CatalogSections", Model.CatalogSections)
}

@if (Model.BreadCrumbs != null)
{
    @Html.Partial("_BreadCrumbs", Model.BreadCrumbs)
}

<div class="mnl16">
    <div class="middle-line bgr">
        <div class="ml-text"><span class="size28">Продукты банка</span></div>
    </div>

    <div class="shared__well-yellow">
        <span class="shared__well-yellow-icon"></span>
        <span class="shared__well-yellow-title">
            Для просмотра продуктов банка, которые Вы можете оплатить бонусами, пожалуйста, <a href="@Url.Action("Login", "Account")">авторизуйтесь</a>.
        </span>
        <span class="shared__well-yellow-title" style="margin-bottom: 0;">
            Напоминаем, что возможность оформления заказов на сайте доступна только активированным пользователям Программы.
        </span>
    </div>
</div>

<ul class="catalog clearfix">
    <li class="bank-products__product">
        <h5>Годовое обслуживание по карте</h5>
        <div class="bank-products__product-card" style="padding-top: 12px; padding-bottom: 25px;">
            <span class="bank-products__product-image" style="background: url('/content/images/bankproduct/card.png') no-repeat center center;">&nbsp;</span>
            <div class="bank-products__product-price" style="margin-top: 11px;">
                от&nbsp;<span>1&nbsp;200</span>&nbsp;бонусов*
            </div>
        </div>
    </li>
    <li class="bank-products__product">
        <h5>SMS-оповещение</h5>
        <div class="bank-products__product-card" style="padding-top: 12px; padding-bottom: 25px;">
            <span class="bank-products__product-image" style="background: url('/content/images/bankproduct/sms.png') no-repeat center center;">&nbsp;</span>
            <div class="bank-products__product-price" style="margin-top: 11px;">
                от&nbsp;<span>100</span>&nbsp;бонусов*
            </div>
        </div>
    </li>
</ul>

<div class="bank-products__guest-comment">* Стоимость вознаграждение указана на 25 декабря 2014 г.</div>
