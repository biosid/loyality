@model Vtb24.Arms.Catalog.Models.Shared.CategoriesLevelModel
@using (Html.BeginForm("Move", "Categories", FormMethod.Post, new { @class = "modal hide", data_x = "categories/move/modal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3>Переместить категорию</h3>
    </div>
    <div class="modal-body">
        <ul class="rootCat tree-modal" data-x="categories/move/categories">
            @Html.Partial("_GiftsCategoriesLevel", Model)
        </ul>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit">Переместить</button>
        <button class="btn" data-dismiss="modal">Отменить</button>
    </div>
}