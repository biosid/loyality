        </ConfigFileTransformation>
        <ConfigFileTransformation xsi:type="StringReplaceConfigFileTransformation">
          <Patterns>
            <string>@PartnersConnectorPfx@</string>
          </Patterns>
          <ReplaceTo>partnersConnector.egoncharov-w7.rapidsoft.local.pfx</ReplaceTo>
        </ConfigFileTransformation>
        <ConfigFileTransformation xsi:type="StringReplaceConfigFileTransformation">
          <Patterns>
            <string>@PartnersConnectorThumbprint@</string>
          </Patterns>
          <ReplaceTo>08 a4 be 7f 7b 8e 74 6b a6 d7 ad c6 25 79 92 4b 12 d8 ca 0b</ReplaceTo>
