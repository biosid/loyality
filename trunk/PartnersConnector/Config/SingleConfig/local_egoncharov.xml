  <ExternalTransformationsFiles>
    <ExternalTransformationsFile>
      <FilePath>CommonConfiguration\local_endpoints.xml</FilePath>
    </ExternalTransformationsFile>
  </ExternalTransformationsFiles>

</SingleConfig>
