@{
    ViewBag.Title = "Файлы";
    ViewBag.MenuId = "files";
    Layout = "~/Areas/Site/Views/Shared/_Layout.cshtml";
}
@Html.AddScriptBlock(
    @<script>
         require(['Content/Files/index'], function(index) {
             index({ fileUrl: '@Url.Action("FileUrl", "Files")'});
         });
     </script>
)
<div class="tab-pane active">
    <div class="container">
        <div class="row">
            <div class="span2 line-height-30 field-title" data-title="Адрес файла от корня домена">URL:</div>
            <div class="span10">
                <input class="input-block-level" type="text" readonly="readonly" data-x="site/files/urlbox"/>
            </div>
        </div>
        <div class="row">
            <div class="span12">
                <div data-x="site/files/elfinder"></div>
            </div>
        </div>
    </div>
</div>
