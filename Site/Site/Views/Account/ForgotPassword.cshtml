@model Vtb24.Site.Models.Account.ForgotPasswordModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Я забыл пароль";
}

@Html.AddScriptBlock(
    @<script>
         require(['Shared/form.submit'], function (module) {
             module({ form: '#forgotpass-form' });
         });
    </script> 
)

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { id = "forgotpass-form", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    <div class="full-content shdw">
        <div class="fc-padding">
            
            <div class="middle-line white">
                <div class="ml-text"><span class="size28">Изменение пароля</span></div>
            </div>
            
            @Html.ValidationSummary()
            
            <p>
                Для получения кода, пожалуйста, введите номер Вашего мобильного телефона, зарегистрированного в Программе.
            </p>

            <div class="table form-order">
                <ul class="reset row">
                    <li class="cell">
                        Номер телефона
                    </li>
                    <li class="cell">
                        @Html.TextBoxFor(m => m.Phone, new { maxlength = 17 })
                    </li>
                </ul>
            </div>
            <div class="button-wrap">
                <button class="btn-blue large" type="submit"><span>Выслать цифровой код</span></button>
            </div>
        </div>
    </div>
}