@using System.Text
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Регистрация карты";

    var frameSrc = Url.Action("Register", "Card", new { returnUrl = Url.Action("ReloadParent", "Card") });
}
@Html.AddScriptBlock(
    @<script>
         require(['Shared/frame-resizer'], function(resizer) {
             resizer({
                  iframe: $('iframe#card-registrator')
             });
         });
     </script>
)
@Html.Partial("_ProcessCommand", "iframe#card-registrator")
<div class="full-content shdw" style="min-height: 200px">
    <div class="fc-padding">
        <iframe id="card-registrator" src="@frameSrc" width="100%" height="450" scrolling="no" marginheight="0" marginwidth="0" frameborder="0"></iframe>
    </div>
</div>
