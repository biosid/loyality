@model dynamic
@Html.AddScriptBlock(@<script>
    require([
        'Main/obj-banner'
    ], function(banner) {
        banner({ selector: '#banner-picnic', max: 2000000, def: 2000000 });
    });
</script>)
<div class="banner-carousel__item banner-picnic @(Model.IsActive ? "active" : null)" id="banner-picnic">
    <div class="obj-banner">
        @* сумка спортивная *@
        <div data-value="3967" class="banner-picnic__bag">
            <a href="https://bonus.vtb24.ru/catalog/search?sort=popularity_desc&term=спортивный+рюкзак" class="obj-banner__pos" style="z-index: 1">
                <span class="obj-banner__baloon _red _bottom-left" style="top: -52px; left: 24px">3 967</span>
            </a>
        </div>
        @* палатка *@
        <div data-value="11967" class="banner-picnic__tent">
            <a href="https://bonus.vtb24.ru/catalog/search?term=Палатка" class="obj-banner__pos">
                <span class="obj-banner__baloon _red _bottom-left" style="top: 25px; left: 337px;">11 967</span>
            </a>
        </div>
        @* чайный набор *@
        <div data-value="2060" class="banner-picnic__teaset">
            <a href=" https://bonus.vtb24.ru/catalog/search?sort=popularity_desc&term=Чайный+набор" class="obj-banner__pos">
                <span class="obj-banner__baloon _red _bottom-right" style="top: -64px; left: -40px">2 060</span>
            </a>
        </div>
        @* стол *@
        <div data-value="6610" class="banner-picnic__table">
            <a href="https://bonus.vtb24.ru/catalog/search?sort=popularity_desc&term=стол+складной" class="obj-banner__pos">
                <span class="obj-banner__baloon _red _top-right" style="top: 56px; left: 50px">6 610</span>
