            </a>
        </div>
        @* Шезлонг *@
        <div data-value="10000" class="banner-picnic__chair">
            <a href="https://bonus.vtb24.ru/catalog/search?term=шезлонг" class="obj-banner__pos">
                <span class="obj-banner__baloon _red _bottom-right" style="top: -66px; left: -40px;">10 000</span>
            </a>
        </div>
        @* термосумка *@
        <div data-value="2980" class="banner-picnic__thermobag">
            <a href="https://bonus.vtb24.ru/catalog/search?term=термосумка" class="obj-banner__pos" style="z-index:1">
                <span class="obj-banner__baloon _red _bottom-left" style="top: -57px; left: 1px;">2 980</span>
            </a>
        </div>
        @* гриль *@
        <div data-value="4829" class="banner-picnic__grill">
